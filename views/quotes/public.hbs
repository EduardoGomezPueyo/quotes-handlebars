{{#if quotes}}
    <div class="columns">
        {{#each quotes}}
            <div class="column">
                <div class="card">
                    {{> _quote}}

                    <footer class="card-footer">
                        <div class="card-footer-item">
                            {{> _likeButton}}
                        </div>
                    </footer>
                </div>
            </div>
        {{/each}}
    </div>
{{else}}
    <p>No quotes to show.</p>
{{/if}}
