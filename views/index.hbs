<div class="section">
    {{#if quotes}}
        <div class="container">
            <div class="columns">
                {{#each quotes}}
                    <div class="column">
                        {{> _quote}}
                    </div>
                {{/each}}
            </div>
        </div>
    {{else}}
        <p>No quotes to show.</p>
    {{/if}}
</div>

